<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".ShoeDetailFragment">

        <TextView
            android:id="@+id/shoe_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_wide"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Shoe name:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/shoe_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_extrawide"
            android:layout_marginRight="@dimen/margin_extrawide"
            android:ems="10"
            android:fontFamily="@font/comfortaa"
            android:inputType="text"
            android:text=""
            android:textAlignment="center" />

        <TextView
            android:id="@+id/shoe_brand_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_wide"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Shoe brand:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/shoe_brand_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_extrawide"
            android:layout_marginRight="@dimen/margin_extrawide"
            android:ems="10"
            android:fontFamily="@font/comfortaa"
            android:inputType="textNoSuggestions|text"
            android:text=""
            android:textAlignment="center" />

        <TextView
            android:id="@+id/shoe_size_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_wide"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Shoe size:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/shoe_size_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_extrawide"
            android:layout_marginRight="@dimen/margin_extrawide"
            android:ems="10"
            android:fontFamily="@font/comfortaa"
            android:inputType="number"
            android:text=""
            android:textAlignment="center" />

        <TextView
            android:id="@+id/shoe_description_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_wide"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Shoe description:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/shoe_description_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_extrawide"
            android:layout_marginRight="@dimen/margin_extrawide"
            android:ems="10"
            android:fontFamily="@font/comfortaa"
            android:inputType="textMultiLine|textNoSuggestions|text"
            android:text=""
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/add_shoe_button"
            style="@style/button"
            android:text="add shoe" />

    </LinearLayout>
</layout>