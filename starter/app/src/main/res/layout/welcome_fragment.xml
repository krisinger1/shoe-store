<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".WelcomeFragment">

        <!-- Using Linear Layout since layout is very simple with only a couple views -->
        <TextView
            android:id="@+id/welcome_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_wide"
            android:fontFamily="@font/comfortaa"
            android:text="@string/welcome_sentence"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/instructions_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_wide"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/comfortaa_bold"
            android:padding="@dimen/padding_small"
            android:text="View Instructions"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa"
            android:text="another text view"
            android:textAlignment="center" />

    </LinearLayout>
</layout>